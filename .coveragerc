[run]
branch = true
source =
  xontrib_ptk_shell/
omit =
  .venv/*

# keep all cache files in one place
data_file = .cache/coverage

[report]
precision = 2
exclude_lines =
    pragma: no cover
    raise NotImplementedError
skip_covered = true
skip_empty = true
show_missing = true
sort = Miss

# keep improving ;)
fail_under = 50
